      "args": [],
      "cwd": "${workspaceFolder}/src/Catalog",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Launch Basket",
      "type": "coreclr",
      "request": "launch",
