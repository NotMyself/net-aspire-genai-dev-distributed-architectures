      "args": [],
      "cwd": "${workspaceFolder}/src/Basket",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Launch WebApp",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/WebApp/bin/Debug/net9.0/WebApp.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/WebApp",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}